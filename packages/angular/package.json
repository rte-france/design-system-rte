{
  "name": "@design-system-rte/angular-builder",
  "version": "0.1.4",
  "scripts": {
    "ng": "ng",
    "build": "npm run generate-icons && ng build ds-rte-lib",
    "postbuild": "cp -R projects/ds-rte-lib/src/lib/assets dist/lib/lib/assets",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "npm publish ./dist/lib --access public",
    "build:publish": "npm run build && npm run publish",
    "storybook": "ng run ds-rte-lib:storybook --port 7007",
    "build-storybook": "npm run generate-icons && ng run ds-rte-lib:build-storybook --output-dir ../design-docs/storybook-static/angular --config-dir .storybook",
    "test:ci": "npx playwright install && npx start-server-and-test storybook http://localhost:7007 test",
    "test": "test-storybook --url http://localhost:7007",
    "generate-icons": "cp -R ../core/assets/icons projects/ds-rte-lib/src/lib/assets"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.12",
    "@angular/cli": "^17.3.12",
    "@angular/compiler-cli": "^17.3.0",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@chromatic-com/storybook": "^3.2.6",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-a11y": "~8.6.0",
    "@storybook/addon-docs": "~8.6.0",
    "@storybook/addon-essentials": "~8.6.0",
    "@storybook/addon-interactions": "~8.6.0",
    "@storybook/angular": "~8.6.0",
    "@storybook/blocks": "~8.6.0",
    "@storybook/test": "~8.6.0",
    "@storybook/test-runner": "^0.22.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "^19.6.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.3.0",
    "storybook": "~8.6.0",
    "typescript": "~5.4.2"
  }
}