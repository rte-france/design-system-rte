{
  "name": "@design-system-rte/core",
  "version": "0.1.1",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "style": "dist/styles/main.css",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rte-france/design-system-rte"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Design Tokens, interfaces and utilities for the Design System RTE",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "sass": "^1.85.1"
  },
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    },
    "./assets/*": "./dist/assets/*",
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "style": "./dist/components/*.scss"
    },
    "./constants/*": {
      "types": "./dist/constants/*.d.ts",
      "import": "./dist/constants/*.js"
    },
    "./tokens/*": {
      "import": "./dist/tokens/*.scss",
      "style": "./dist/tokens/*.scss"
    },
    "./style.css": "./dist/styles/main.css"
  },
  "sideEffects": [
    "./dist/styles/main.css"
  ],
  "devDependencies": {
    "glob": "^11.0.2",
    "sass-embedded": "^1.87.0",
    "vite": "^6.3.2",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-lib-inject-css": "^2.2.2"
  }
}
