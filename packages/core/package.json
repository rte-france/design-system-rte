{
  "name": "@design-system-rte/core",
  "version": "1.3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./design-tokens/*": "./dist/design-tokens/*",
    "./assets/*": "./dist/assets/*",
    "./css/*": "./dist/css/*",
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "build": "npm run build:css-themes && npm run build:css-fonts && npm run bundle:core",
    "build:css-themes": "ts-node css-theme-generator.ts",
    "build:css-fonts": "ts-node css-font-generator.ts",
    "bundle:core": "ts-node scripts/bundle-core.ts",
    "generate:tokens": "ts-node ./scripts/design-tokens/generator.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "description": "Design Tokens, interfaces and utilities for the Design System RTE",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "sass": "^1.85.1"
  },
  "devDependencies": {
    "sass": "^1.89.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}